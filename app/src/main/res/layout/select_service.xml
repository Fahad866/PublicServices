<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout"
    tools:context="com.example.fahad.publicservices.SelectService">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:orientation="horizontal"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/barber"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:src="@drawable/barber"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/car_wash"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:src="@drawable/carwash"
                android:layout_weight="1"/>

        </LinearLayout>

        <!-- ============================================================== -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:orientation="horizontal"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/electrician"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:src="@drawable/electrician"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/plumber"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:src="@drawable/plumber"
                android:layout_weight="1"/>

        </LinearLayout>

        <!-- ============================================================== -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:orientation="horizontal"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/mobile_repair"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:src="@drawable/mobilefix"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/car_fix"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:src="@drawable/carfix"
                android:layout_weight="1"/>

        </LinearLayout>


        <!-- ============================================================== -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:orientation="horizontal"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/doctor"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:src="@drawable/doctor"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/carpenter"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:src="@drawable/carpenter"
                android:layout_weight="1"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
