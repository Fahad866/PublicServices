<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.fahad.publicservices.AdminPage">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="80sp"
            android:layout_marginTop="10sp"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/Services_Details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Services Details"
            android:layout_marginBottom="20sp"/>
        <Button
            android:id="@+id/Delete_Customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Customer"
            android:layout_marginBottom="20sp"/>
        <Button
            android:id="@+id/Delete_Service_Provider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Service Provider"/>


        <LinearLayout
            android:id="@+id/Customer_Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:hint="Customer ID"
                android:id="@+id/Customer_ID"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_gravity="center"
                android:id="@+id/btn_DeleteC"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/Service_Provider_Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:hint="Service Provider ID"
                android:id="@+id/Service_Provider_ID"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_gravity="center"
                android:id="@+id/btn_DeleteSP"/>



        </LinearLayout>


    </LinearLayout>





</LinearLayout>
