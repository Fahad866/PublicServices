 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context="com.example.fahad.publicservices.UserMainPage">

        <!-- The primary full-screen view. This can be replaced with whatever view
             is needed to present your content, e.g. VideoView, SurfaceView,
             TextureView, etc. -->

        <!-- This FrameLayout insets its children based on system windows using
             android:fitsSystemWindows. -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/Request_Services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Request Services"
                android:paddingTop="10sp"
                android:layout_margin="20sp"
                android:textColor="#ffffff"
                android:textSize="32sp"
                android:background="#21c1de"
                android:drawableTop="@drawable/list"/>

            <Button
                android:id="@+id/Edit_Profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:paddingTop="10sp"
                android:layout_margin="20sp"
                android:textColor="#83838c"
                android:textSize="32sp"
                android:background="#ffffff"
                android:drawableTop="@drawable/edit"/>

            <Button
                android:id="@+id/Contact_Us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:paddingTop="10sp"
                android:layout_margin="20sp"
                android:textColor="#83838c"
                android:textSize="32sp"
                android:background="#ffffff"
                android:drawableTop="@drawable/support"/>

            <Button
                android:id="@+id/Log_Out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:paddingTop="10sp"
                android:layout_margin="20sp"
                android:textColor="#83838c"
                android:textSize="32sp"
                android:background="#ffffff"
                android:drawableTop="@drawable/exit"/>
        </LinearLayout>

    </LinearLayout>


